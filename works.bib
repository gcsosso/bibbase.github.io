@article{fajin_density_2014,
	title = {Density {Functional} {Theory} {Study} of the {Water} {Dissociation} on {Platinum} {Surfaces}: {General} {Trends}},
	volume = {118},
	issn = {1089-5639},
	shorttitle = {Density {Functional} {Theory} {Study} of the {Water} {Dissociation} on {Platinum} {Surfaces}},
	url = {http://dx.doi.org/10.1021/jp411500j},
