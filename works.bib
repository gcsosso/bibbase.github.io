@article{sosso_vibrational_2009, title= {Vibrational properties of crystalline {Sb}2Te3 from first principles}, volume= {21}, issn= {0953-8984}, url= {http://iopscience.iop.org/0953-8984/21/9/095410}, doi= {10.1088/0953-8984/21/9/095410}, abstract= {Phonon dispersion relations and infrared and Raman spectra of crystalline Sb2Te3 were computed within density functional perturbation theory. Overall good agreement with experiments is obtained, which allows us to assign the Raman and IR peaks to specific phonons.}, language= {en}, number= {9}, urldate= {2014-07-02}, journal= {Journal of Physics: Condensed Matter}, author= {Sosso, G. C. and Caravati, S. and Bernasconi, M.}, month= {mar}, year= {2009}, pages= {095410}, file= {Snapshot:/Users/wolf/Library/Application Support/Zotero/Profiles/k7dpptsb.default/zotero/storage/5BFRHDWC/095410.html:text/html;Sosso et al. - 2009 - Vibrational properties of crystalline Sb sub2s.pdf:/Users/wolf/Library/Application Support/Zotero/Profiles/k7dpptsb.default/zotero/storage/ZC78FBSX/Sosso et al. - 2009 - Vibrational properties of crystalline Sb sub2s.pdf:application/pdf}}

