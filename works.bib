@article{campi_electronphonon_2015, title= {Electron–phonon interaction and thermal boundary resistance at the interfaces of {Ge}2Sb2Te5 with metals and dielectrics}, volume= {27}, issn= {0953-8984}, url= {http://iopscience.iop.org/0953-8984/27/17/175009}, doi= {10.1088/0953-8984/27/17/175009}, abstract= {The Ge2Sb2Te5 compound is of interest for applications in phase change non-volatile memories. First-principles calculations of phonon dispersion relations and electron–phonon coupling constant provide an estimate of the electron–phonon contribution to the thermal boundary resistance at the interfaces of Ge2Sb2Te5 with dielectrics (silica) and metal electrodes (Al and TiN). The diffuse mismatch model including full phononic dispersion has been used to compute the phononic contribution to the thermal boundary resistance. The calculated value of the electron–phonon contribution to the TBR at 300 K of about 14 m2K GW−1 would dominate the TBR at the interfaces of hexagonal Ge2Sb2Te5 with the surrounding dielectrics and metals considered here once interdiffusion at the boundaries could be minimized.}, language= {en}, number= {17}, urldate= {2015-04-16}, journal= {Journal of Physics: Condensed Matter}, author= {Campi, D. and Baldi, E. and Graceffa, G. and Sosso, G. C. and Bernasconi, M.}, month= {may}, year= {2015}, pages= {175009}, file= {Full Text PDF:/Users/wolf/Library/Application Support/Zotero/Profiles/k7dpptsb.default/zotero/storage/DKMMRFZI/Campi et al. - 2015 - Electron–phonon interaction and thermal boundary r.pdf:application/pdf;Snapshot:/Users/wolf/Library/Application Support/Zotero/Profiles/k7dpptsb.default/zotero/storage/G4HSS3Q8/175009.html:text/html}}

