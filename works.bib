@article{sosso_atomic_2015, title= {Atomic mobility in the overheated amorphous {GeTe} compound for phase change memories}, copyright= {© 2015 WILEY-VCH Verlag GmbH \& Co. KGaA, Weinheim}, issn= {1862-6319}, url= {http://onlinelibrary.wiley.com/doi/10.1002/pssa.201532378/abstract}, doi= {10.1002/pssa.201532378}, abstract= {Abstractauthoren Phase change memories rest on the ability of some chalcogenide alloys to undergo a fast and reversible transition between the crystalline and amorphous phases upon Joule heating. The fast crystallization is due to a high nucleation rate and a large crystal growth velocity which are actually possible thanks to the fragility of the supercooled liquid that allows for the persistence of a high atomic mobility at high supercooling where the thermodynamical driving force for crystallization is also high. Since crystallization in the devices occurs by rapidly heating the amorphous phase, hysteretic effects might arise with a different diffusion coefficient and viscosity on heating than on cooling. In this work, we have quantified these hysteretic effects in the phase change compound GeTe by means of molecular dynamics simulations. The atomic mobility in the overheated amorphous phase is lower than in supercooled liquid at the same temperature and the viscosity is consequently higher. Still, the simulations of the overheated amorphous phase reveal a breakdown of the Stokes–Einstein relation between the diffusion coefficient and the viscosity, similarly to what we found previously in the supercooled liquid. Evidences are provided that the breakdown is due to the emergence of dynamical heterogeneities at high supercooling.}, language= {en}, urldate= {2015-10-28}, journal= {physica status solidi (a)}, author= {Sosso, G. C. and Behler, J. and Bernasconi, M.}, month= {oct}, year= {2015}, keywords= {GeTe, glasses, molecular dynamics simulations, phase change memories, supercooled liquids}, pages= {n/a--n/a}, file= {Snapshot:/Users/wolfandpixie/Library/Application Support/Zotero/Profiles/ijic45xn.default/zotero/storage/GXRADNR3/abstract.html:text/html;Sosso et al. - 2015 - Atomic mobility in the overheated amorphous GeTe c.pdf:/Users/wolfandpixie/Library/Application Support/Zotero/Profiles/ijic45xn.default/zotero/storage/K2HUJ7AV/Sosso et al. - 2015 - Atomic mobility in the overheated amorphous GeTe c.pdf:application/pdf}}

