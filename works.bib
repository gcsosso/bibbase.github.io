pmid = {25356792},
publisher = {American Chemical Society},
title = {{Dynamical Heterogeneity in the Supercooled Liquid State of the Phase Change Material GeTe}},
url = {http://pubs.acs.org/doi/abs/10.1021/jp507361f},
volume = {118},
year = {2014}
}
