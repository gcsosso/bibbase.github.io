@article{gabardi_microscopic_2015, title= {Microscopic origin of resistance drift in the amorphous state of the phase-change compound {GeTe}}, volume= {92}, url= {http://link.aps.org/doi/10.1103/PhysRevB.92.054201}, doi= {10.1103/PhysRevB.92.054201}, abstract= {Aging is a common feature of the glassy state. In the case of phase-change chalcogenide alloys the aging of the amorphous state is responsible for an increase of the electrical resistance with time. This phenomenon called drift is detrimental in the application of these materials in phase-change nonvolatile memories, which are emerging as promising candidates for storage class memories. By means of combined molecular dynamics and electronic structure calculations based on density functional theory, we have unraveled the atomistic origin of the resistance drift in the prototypical phase-change compound GeTe. The drift results from a widening of the band gap and a reduction of Urbach tails due to structural relaxations leading to the removal of chains of Ge-Ge homopolar bonds. The same structural features are actually responsible for the high mobility above the glass transition which boosts the crystallization speed exploited in the device.}, number= {5}, urldate= {2015-11-13}, journal= {Physical Review B}, author= {Gabardi, S. and Caravati, S. and Sosso, G. C. and Behler, J. and Bernasconi, M.}, month= {aug}, year= {2015}, pages= {054201}, file= {Gabardi et al. - 2015 - Microscopic origin of resistance drift in the amor.pdf:/Users/wolfandpixie/Library/Application Support/Zotero/Profiles/ijic45xn.default/zotero/storage/HEC3A63E/PhysRevB.92.054201.pdf:application/pdf;SI.pdf:/Users/wolfandpixie/Library/Application Support/Zotero/Profiles/ijic45xn.default/zotero/storage/JJJM9EMF/Supplemental_Material2.pdf:application/pdf}}

