@article{sosso_vibrational_2009-1, title= {Vibrational properties of hexagonal {Ge}2Sb2Te5 from first principles}, volume= {21}, issn= {0953-8984}, url= {http://iopscience.iop.org/0953-8984/21/24/245401}, doi= {10.1088/0953-8984/21/24/245401}, abstract= {Phonons at the Γ point and the Raman spectrum of the hexagonal Ge2Sb2Te5 were computed within density functional perturbation theory. The three different stackings of the Ge/Sb planes proposed in the experimental literature were considered. The theoretical Raman spectrum is similar for the three stackings with a marginally better agreement with experiments for the structure proposed by Matsunaga et al (2004 Acta Crystallogr. B 60 685) which assumes a disorder in Ge/Sb site occupation. Although the large broadening of the experimental Raman peaks prevents discriminating among the different stackings, the assignment of the Raman peaks to specific phonons is possible because the main features of the spectrum are rather insensitive to the actual distribution of atoms in the Sb/Ge sublattices. On the basis of the energetics (including configurational entropy) two stackings seem plausible candidates for GST, but only the mixed stacking by Matsunaga et al reproduces the spread of Ge/Sb–Te bond lengths measured experimentally.}, language= {en}, number= {24}, urldate= {2014-07-02}, journal= {Journal of Physics: Condensed Matter}, author= {Sosso, G. C. and Caravati, S. and Gatti, C. and Assoni, S. and Bernasconi, M.}, month= {jun}, year= {2009}, pages= {245401}, file= {Snapshot:/Users/wolf/Library/Application Support/Zotero/Profiles/k7dpptsb.default/zotero/storage/MG4MZCQT/245401.html:text/html;Sosso et al. - 2009 - Vibrational properties of hexagonal Ge sub2sub.pdf:/Users/wolf/Library/Application Support/Zotero/Profiles/k7dpptsb.default/zotero/storage/TGF2SAHK/Sosso et al. - 2009 - Vibrational properties of hexagonal Ge sub2sub.pdf:application/pdf}}

