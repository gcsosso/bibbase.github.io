@article{taraskin_ioffe-regel_2000,
	title = {Ioffe-{Regel} crossover for plane-wave vibrational excitations in vitreous silica},
	volume = {61},
	url = {https://link.aps.org/doi/10.1103/PhysRevB.61.12031},
